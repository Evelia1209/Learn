$rem() {
  val = ''
  for n in arguments {
    val = val+ unit(n / 17.77778px, rem) + ' '
  }
  return s(val)
}
body {
  font-family:'Helvetica Neue', Arial, sans-serif;
  -webkit-user-select: none
  background-color: #f2f2f2
}

.viewport {
  margin: 0 auto;
  position: relative;
}
.top-card {
  text-align: center;
  background-color: #f64349;
  overflow: hidden
  .main {
    margin-top: $rem(23px);
    line-height: 1;
    .rate {
      .tit {
        font-size: $rem(28px);
        color: #ffcccc
      }
      .cont {
        margin-top: $rem(10px);
        font-size: $rem(100px);
        color: #fff
        small {
          font-size: $rem(60px);
        }
      }
    }
    .rule {
      margin-top: $rem(25px);
      font-size: $rem(30px);
      color: #ffcccc;
      .divide {
        padding: $rem(0 25px);
      }
      b {
        color: #fff
        padding: $rem(0 10px);
      }
    }
  }
  .other {
    margin-top: $rem(35px);
    .info {
      height: $rem(80px);
      font-size: $rem(24px);
      line-height: @height;
      background-color: #f65e63;
      color: #febdbd;
      b {
        color: #fff
        padding: $rem(0 10px);
      }
    }
    .progress {
      display: none
    }
    &.ing {
      .info {
        background-color: transparent;
      }
      .progress {
        position: absolute;
        margin-top: $rem(-80px);
        width: 100%
        text-align: center
        display: block;
        font-size: 0;
        em {
          position: relative
          display: inline-block
          width: $rem(540px);
          height: $rem(6px);
          background-color: #fff;
          border-radius: $rem(5px)
          i {
            position: absolute
            left: 0;
            top: 0;
            display: inline-block
            width: 0%;
            height: @height;
            background-color: #ffff99;
            border-radius: @border-radius;
          }
        }
      }
    }
  }
}
